{
  "compilerOptions": {
    "rootDir": "./src", // Tell TypeScript where your source files are
    "outDir": "./dist", // Output compiled files to the 'dist' folder,
    "module": "NodeNext", // or "esnext" or "commonjs",
    "target": "ES6",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"],
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"], // Ensure only 'src' is compiled
  "exclude": ["node_modules", "dist"] // Prevent TypeScript from re-compiling built files
}
